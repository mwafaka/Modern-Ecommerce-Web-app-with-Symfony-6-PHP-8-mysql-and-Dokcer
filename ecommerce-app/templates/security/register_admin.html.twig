{% extends 'base.html.twig' %}

{% block title %}Admin Registration
{% endblock %}

{% block body %}
	<div class="min-h-screen flex items-center justify-center bg-gray-100">
		<div class="w-full max-w-md bg-white rounded-2xl shadow-lg p-8">
			<h1 class="text-2xl font-bold text-gray-800 mb-6 text-center">Admin User Created</h1>

			<div class="mb-4 text-green-700 bg-green-100 p-3 rounded-md">
				<p class="text-sm">An admin user has been successfully created with the email
					<strong>admin@example.com</strong>.</p>
				<p class="text-sm">You can now log in with the credentials:</p>
				<ul class="list-disc ml-4 text-sm">
					<li>
						<strong>Email:</strong>
						{email}</li>
					<li>
						<strong>Password:</strong>
						{password}</li>
				</ul>
			</div>

			<div class="mt-4 text-center">
				<a href="{{ path('app_login') }}" class="inline-block bg-blue-600 text-white py-2 px-4 rounded-lg hover:bg-blue-700 transition-colors">
					Go to Login
				</a>
			</div>
		</div>
	</div>
{% endblock %}
