{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="max-w-lg mx-auto mt-12 bg-white p-8 shadow-lg rounded-2xl border border-gray-200">
    <h1 class="text-3xl font-bold text-gray-800 mb-6">Create Your Account</h1>

    {{ form_start(registrationForm, {'attr': {'class': 'space-y-6'}}) }}
        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
            {{ form_widget(registrationForm.email, {
                'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-500 focus:outline-none'}
            }) }}
            {{ form_errors(registrationForm.email) }}
        </div>

        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Password</label>
            {{ form_widget(registrationForm.plainPassword.first, {
                'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-500 focus:outline-none'}
            }) }}
            {{ form_errors(registrationForm.plainPassword.first) }}
        </div>

        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Repeat Password</label>
            {{ form_widget(registrationForm.plainPassword.second, {
                'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-500 focus:outline-none'}
            }) }}
            {{ form_errors(registrationForm.plainPassword.second) }}
        </div>

        <div>
            {{ form_widget(registrationForm.register, {
                'attr': {'class': 'w-full text-center bg-indigo-600 hover:bg-indigo-600 text-white font-semibold py-2 px-4 rounded-xl transition'}
            }) }}
        </div>
    {{ form_end(registrationForm) }}
</div>
{% endblock %}
