{% extends 'base.html.twig' %}

{% block title %}Edit Product
{% endblock %}

{% block body %}
	<div class="max-w-4xl mx-auto p-8">
		<h1 class="text-4xl font-bold text-gray-900 mb-6">Edit Product</h1>

		<div class="bg-white shadow-lg rounded-lg p-6 mb-8">
			<h2 class="text-xl font-semibold text-gray-700 mb-4">Product Details</h2>
			{{ include('product/_form.html.twig', {'button_label': 'Update'}) }}
		</div>

		<div class="flex space-x-6 mt-8">
			<a href="{{ path('app_product_index') }}" class="inline-block bg-blue-600 hover:bg-blue-700 text-white py-2 px-6 rounded-lg shadow-md transition duration-200 ease-in-out transform hover:scale-105">
